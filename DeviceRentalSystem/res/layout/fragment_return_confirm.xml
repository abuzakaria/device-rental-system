<?xml version="1.0" encoding="UTF-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/deviceDetTextR"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_margin="10dp"
            android:layout_marginTop="20dp"
            android:text="Device Details:"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/device_details_r"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/deviceDetTextR"
            android:layout_margin="5dp"
            android:background="@drawable/border"
            android:padding="10dp" />

        <TextView
            android:id="@+id/renterDetTextR"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/device_details_r"
            android:layout_margin="10dp"
            android:layout_marginTop="20dp"
            android:text="Renter Details:"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/renter_details_r"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/renterDetTextR"
            android:layout_margin="5dp"
            android:background="@drawable/border"
            android:padding="10dp" />
        
        <EditText
            android:id="@+id/return_comments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/renter_details_r"
            android:layout_marginTop="15dp"
            android:ems="10"
            android:hint="Comments" />

        <Button
            android:id="@+id/return_conf_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/return_comments"
            android:layout_centerHorizontal="true"
            android:text="Return!" />
    </RelativeLayout>

</ScrollView>